datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Domains {
  domain    String   @id
  hits      Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model GuildConfigs {
  id         String       @id
  delete     Level        @default(YES)
  action     ActionKind   @default(NONE)
  logChannel String?      @map("log_channel")
  muteRole   String?      @map("mute_role")
  notify     Level?       @default(NO)
  logLevel   Level?       @default(NO)
  exemptions Exemptions[]
  muted      Muted[]
}

model Exemptions {
  id      String
  guildId String        @map("guild_id")
  kind    ExemptionKind
  guild   GuildConfigs  @relation(fields: [guildId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([id, guildId])
}

model Muted {
  id      String
  guildId String        @map("guild_id")
  guild   GuildConfigs  @relation(fields: [guildId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([id,guildId])
}

enum Level {
  ALWAYS
  YES
  NO
}

enum ActionKind {
  BAN
  SOFTBAN
  KICK
  MUTE
  STICKYMUTE
  NONE
}

enum ExemptionKind {
  CHANNEL
  USER
  ROLE
}

{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "lib": ["ES2020"],
    "target": "ES2020",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "fish": ["./lib"]
    },
    "typeRoots": ["node_modules/@types", "lib/types"]
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts",
    "lib/protos/*.js",
    "scripts/**/*.ts"
  ]
}
